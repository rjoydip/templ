{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "inputs": ["src/**/*.{ts,tsx}"]
    },
    "dev": {
      "dependsOn": ["^dev", "^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["**/*.test.{ts,tsx}"]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "outputs": ["coverage/**"],
      "inputs": ["test/**/*.test.{ts,tsx}"]
    }
  }
}

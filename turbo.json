{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts"]
    },
    "test": {
      "dependsOn": ["^build", "bench"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "test:cli": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["build", "eslint", "lint:size-limit", "lint:size-report", "lint:type-cov"],
      "cache": false
    },
    "commit": {
      "dependsOn": ["deps:update", "build", "lint", "changelog"],
      "cache": false
    },
    "bench": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "setup": {
      "dependsOn": ["commit", "test"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "changelog": {
      "cache": false
    },
    "deps:update": {
      "cache": false
    },
    "eslint": {
      "cache": false
    },
    "knip": {
      "cache": false
    },
    "lint:size-limit": {
      "cache": false
    },
    "lint:size-report": {
      "cache": false
    },
    "lint:type-cov": {
      "cache": false
    }
  }
}

{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "eslint": {},
    "eslint:fix": {},
    "size:limit": {
      "dependsOn": ["build"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test:ci": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}

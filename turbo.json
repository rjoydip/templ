{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "dev": {
      "cache": false,
      "dependsOn": ["^dev", "^build"]
    },
    "docs:build": {
      "outputs": ["docs/**"],
      "outputMode": "new-only"
    },
    "build": {
      "dependsOn": ["^build", "@templ/ui#build:storybook"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "test:ci": {
      "dependsOn": ["build"]
    }
  }
}

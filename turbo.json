{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "inputs": ["src/**/*.{ts,tsx}"]
    },
    "dev": {
      "dependsOn": ["^dev", "^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["**/*.test.{ts,tsx}"]
    },
    "check": {}
  }
}

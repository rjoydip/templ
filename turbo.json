{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["@templ/scripts#clean", "^build"],
      "outputs": ["dist/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "test:cli": {
      "dependsOn": ["@templ/cli#build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "commit": {
      "dependsOn": ["deps:update", "^build", "lint", "changelog"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "changelog": {
      "cache": false
    },
    "deps:update": {
      "cache": false
    }
  }
}

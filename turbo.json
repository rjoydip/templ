{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.base.json"],
  "pipeline": {
    "all": {
      "dependsOn": ["build", "typecheck", "test:ci", "test:cli"]
    },
    "build": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    },
    "test:cli": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "test:coverage": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": true,
      "persistent": true
    }
  }
}

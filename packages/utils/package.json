{
  "private": true,
  "name": "@templ/utils",
  "version": "0.0.0",
  "description": "TEMPL utils service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo dist docs coverage",
    "dev": "tsx ./src/index.ts --watch",
    "docs:build": "pnpm typedoc",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "size:limit": "size-limit",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:watch": "vitest run --watch",
    "typedoc": "typedoc src/index.ts",
    "typedoc:preview": "sirv docs"
  },
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@size-limit/file": "^8.2.6",
    "@templ/config": "workspace:^",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "@types/node": "^20.5.9",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "tsup": "^7.2.0",
    "tsx": "^3.12.8",
    "typedoc": "^0.25.1",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "400B"
    }
  ]
}

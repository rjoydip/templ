{
  "name": "@templ/utils",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL utils service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "engines": {
    "node": "^18.8.0 || >=20.6.0"
  },
  "scripts": {
    "build": "wireit",
    "clean": "trash .wireit dist docs coverage",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "trash-cli": "^5.0.0",
    "tsup": "^8.0.1",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.1.0",
    "wireit": "^0.14.1"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        {
          "script": "../config:build",
          "cascade": false
        }
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  }
}

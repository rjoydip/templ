{
  "name": "@templ/logger",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL logger service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/logger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/logger"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "eslint": "wireit",
    "lint:size": "wireit",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "ora": "^7.0.1",
    "serialize-error": "^11.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.2",
    "@size-limit/file": "^9.0.0",
    "@types/node": "^20.7.0",
    "@vitest/coverage-v8": "^0.34.5",
    "eslint": "^8.50.0",
    "rimraf": "^5.0.4",
    "size-limit": "^9.0.0",
    "tsup": "^7.2.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5",
    "wireit": "^0.14.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "clean": {
      "command": "rimraf .eslintcache .wireit dist docs coverage"
    },
    "eslint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ]
    },
    "lint:size": {
      "command": "size-limit",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10KB"
    }
  ]
}

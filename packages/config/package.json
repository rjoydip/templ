{
  "name": "@templ/config",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL config service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/config"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "dev": "wireit",
    "docs:build": "wireit",
    "docs:preview": "wireit",
    "eslint": "wireit",
    "lint:size": "wireit",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "dependencies": {
    "bundle-require": "^4.0.1",
    "joycon": "^3.1.1",
    "strip-json-comments": "^5.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.2",
    "@size-limit/file": "^9.0.0",
    "@templ/logger": "workspace:^",
    "@types/node": "^20.6.3",
    "@vitest/coverage-v8": "^0.34.5",
    "eslint": "^8.50.0",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^9.0.0",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.1",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5",
    "wireit": "^0.14.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        {
          "script": "../logger:build",
          "cascade": false
        }
      ]
    },
    "clean": {
      "command": "rimraf .eslintcache .wireit dist docs coverage"
    },
    "dev": {
      "command": "tsx ./src/index.ts --watch",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ]
    },
    "docs:build": {
      "command": "typedoc src/index.ts",
      "output": [
        "docs/**"
      ],
      "dependencies": [
        "build"
      ]
    },
    "docs:preview": {
      "command": "sirv docs",
      "files": [
        "src/**"
      ],
      "dependencies": [
        "docs:build"
      ]
    },
    "eslint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ]
    },
    "lint:size": {
      "command": "size-limit",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2KB"
    }
  ]
}

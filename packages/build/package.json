{
  "name": "@templ/build",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL package build",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/build#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/build"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "files": [],
  "bin": {
    "build-package": "./src/index.ts"
  },
  "scripts": {
    "build": "tsx ./src/index.ts",
    "clean": "rimraf .turbo dist docs coverage",
    "dev": "tsx ./src/index.ts --watch",
    "docs:build": "pnpm typedoc",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "size:limit": "size-limit",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:watch": "vitest run --watch",
    "typedoc": "typedoc src/index.ts",
    "typedoc:preview": "sirv docs"
  },
  "devDependencies": {
    "@size-limit/file": "^8.2.6",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "@templ/utils": "workspace:^",
    "@types/node": "^20.5.9",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "tsx": "^3.12.8",
    "typedoc": "^0.24.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "dependencies": {
    "esbuild": "^0.19.2",
    "mri": "^1.2.0",
    "totalist": "^3.0.1",
    "zod": "^3.22.2"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "100B"
    },
    {
      "path": "./dist/esbuild.js",
      "limit": "900B"
    },
    {
      "path": "./dist/build-package.js",
      "limit": "600B"
    }
  ]
}

{
  "name": "@templ/build",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL package build",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/build#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/build"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "bin": {
    "build": "./src/cli.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "dev": "wireit",
    "docs:build": "wireit",
    "docs:preview": "wireit",
    "lint": "wireit",
    "size:limit": "wireit",
    "test": "wireit",
    "test:watch": "wireit",
    "test:cli": "tsx ./src/cli.ts"
  },
  "devDependencies": {
    "@size-limit/file": "^9.0.0",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "@templ/utils": "workspace:^",
    "@types/node": "^20.6.2",
    "@vitest/coverage-v8": "^0.34.4",
    "eslint": "^8.49.0",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^9.0.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.10",
    "typedoc": "^0.25.1",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4",
    "wireit": "^0.13.0"
  },
  "dependencies": {
    "@templ/config": "workspace:^",
    "@templ/logger": "workspace:^",
    "esbuild": "^0.19.3",
    "get-tsconfig": "^4.7.0",
    "sade": "^1.8.1",
    "totalist": "^3.0.1",
    "typescript": "^5.2.2"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        {
          "script": "../config:build",
          "cascade": false
        },
        {
          "script": "../logger:build",
          "cascade": false
        },
        {
          "script": "../utils:build",
          "cascade": false
        }
      ]
    },
    "clean": {
      "command": "rimraf .eslintcache .wireit dist docs coverage"
    },
    "dev": {
      "command": "tsx ./src/index.ts --watch",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ]
    },
    "docs:build": {
      "command": "typedoc src/index.ts",
      "output": [
        "docs/**"
      ],
      "dependencies": [
        "build"
      ]
    },
    "docs:preview": {
      "command": "sirv docs",
      "files": [
        "src/**"
      ],
      "dependencies": [
        "docs:build"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc"
      ]
    },
    "size:limit": {
      "command": "size-limit",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "18KB"
    }
  ]
}

{
  "name": "@grft/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Grft core service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/grft/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/grft.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/grft/issues"
  },
  "sideEffects": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup ./src/index.ts --watch"
  },
  "dependencies": {
    "mustache": "^4.2.0",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2",
    "find-monorepo-root": "^1.0.3",
    "pkg-dir": "^7.0.0"
  }
}

{
  "name": "@grft/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Grft core service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/grft/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/grft.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/grft/issues"
  },
  "sideEffects": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./reporter": {
      "import": "./dist/reporter.js"
    },
    "./constants": {
      "import": "./dist/constants.js"
    },
    "./utils": {
      "import": "./dist/utils.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "_ni": "ni",
    "build": "tsup",
    "clean": "rimraf dist node_modules",
    "dev": "tsup ./src/index.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "CI=true vitest",
    "test:coverage": "nr test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "mustache": "^4.2.0",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2"
  }
}

{
  "name": "@templ/core",
  "type": "module",
  "version": "0.0.0",
  "description": "TEMPL core service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "sideEffects": true,
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "rimraf .wireit dist docs coverage",
    "lint:size": "wireit",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "devDependencies": {
    "@size-limit/file": "^9.0.0",
    "@types/node": "^20.7.0",
    "@vitest/coverage-v8": "^0.34.5",
    "rimraf": "^5.0.4",
    "size-limit": "^9.0.0",
    "tsup": "^7.2.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5",
    "wireit": "^0.14.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        {
          "script": "../config:build",
          "cascade": false
        }
      ]
    },
    "lint:size": {
      "command": "size-limit",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "100B",
      "brotli": true
    }
  ]
}

{
  "name": "@templ/core",
  "type": "module",
  "version": "0.0.1",
  "description": "Core",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "sideEffects": true,
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "engines": {
    "node": "^18.8.0 || >=20.6.0",
    "npm": ">=8"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --tree-shaking=true --target=node20 --packages=external --format=esm --platform=node --outfile=dist/index.js",
    "dev": "esbuild src/index.ts --watch --bundle --minify --tree-shaking=true --target=node20 --packages=external --format=esm --platform=node --outfile=dist/index.js",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "@vitest/coverage-v8": "^1.2.2",
    "esbuild": "^0.20.0",
    "vitest": "^1.2.2"
  },
  "size-limit": "100 B"
}

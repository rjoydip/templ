{
  "name": "@templ/core",
  "version": "0.0.0",
  "description": "TEMPL core service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo dist docs coverage",
    "dev": "tsup ./src/index.ts --watch",
    "docs:preview": "sirv docs",
    "docs:build": "typedoc src/index.ts",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:watch": "vitest run --watch"
  },
  "sideEffects": true,
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@templ/config": "workspace:^",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "@templ/utils": "workspace:^",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "typedoc": "^0.24.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  }
}

{
  "name": "@grft/ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepublish": "nr build",
    "postinstall": "nr build",
    "clean": "rimraf dist coverage storybook-static",
    "clean:nm": "rimraf node_modules",
    "build": "nr clean && tsup && nr storybook:build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "test-storybook --url http://127.0.0.1:6006 --coverage",
    "storybook:preview": "vite preview --outDir storybook-static --host 0.0.0.0 --port 6006 --strictPort true",
    "wait-on-tcp": "wait-on tcp:6006",
    "test": "",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "preact": "^10.15.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@storybook/addon-actions": "^7.0.23",
    "@storybook/addon-essentials": "^7.0.23",
    "@storybook/addon-interactions": "7.0.23",
    "@storybook/addon-links": "^7.0.23",
    "@storybook/blocks": "7.0.23",
    "@storybook/preact": "^7.0.23",
    "@storybook/preact-vite": "7.0.23",
    "@storybook/test-runner": "^0.11.0",
    "@types/react": "^18.2.13",
    "storybook": "7.0.23",
    "wait-on": "^7.0.1"
  }
}

{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["@templ/config#build", "build:storybook"],
      "outputs": ["dist/**"]
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"],
      "outputMode": "new-only"
    },
    "test:storybook": {
      "dependsOn": ["build:storybook"]
    }
  }
}

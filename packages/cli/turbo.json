{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["@templ/config#build", "@templ/core#build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test:ci": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test:cli": {
      "dependsOn": ["build", "test"]
    }
  }
}

{
  "name": "@templ/cli",
  "cliname": "TEMPL",
  "version": "0.0.0",
  "description": "TEMPL cli service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "templ": "templ.mjs"
  },
  "files": [
    "*.d.ts",
    "dist",
    "templ.mjs"
  ],
  "scripts": {
    "build": "tsup && pnpm run typedoc",
    "clean": "rimraf .turbo dist docs coverage",
    "dev": "node --loader tsx ./src/index.ts -v",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "size:limit": "size-limit",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:cli": "pnpm link . && pnpm templ -v",
    "test:watch": "vitest run --watch",
    "typedoc": "typedoc src/index.ts",
    "typedoc:preview": "sirv docs"
  },
  "sideEffects": true,
  "types": "./dist/index.d.ts",
  "dependencies": {
    "sade": "^1.8.1",
    "serialize-error": "^11.0.2"
  },
  "devDependencies": {
    "@size-limit/file": "^8.2.6",
    "@templ/config": "workspace:^",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "eslint": "^8.48.0",
    "find-monorepo-root": "^1.0.3",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "tsx": "^3.12.7",
    "typedoc": "^0.25.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "1KB"
    }
  ]
}

{
  "name": "@grft/cli",
  "type": "module",
  "version": "0.2.0-beta.0",
  "cliname": "grft",
  "description": "Grft cli service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/grft/tree/main/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/grft.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/grft/issues"
  },
  "sideEffects": true,
  "exports": {
    "./*": "./*"
  },
  "main": "./dist/cli.js",
  "module": "./dist/cli.js",
  "bin": {
    "grft": "bin/grft.mjs"
  },
  "files": [
    "bin",
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "nr clean && tsup",
    "clean": "rm -rf dist package-lock.json",
    "clean:nm": "rm -rf node_modules",
    "dev": "esno ./src/cli.ts -v",
    "prepublishOnly": "nr build",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "test": "ni && nr build && pnpm link . && npx grft -v && rm -r node_modules/{@grft,.bin/*grft*}"
  },
  "dependencies": {
    "@grft/core": "file:../core",
    "sade": "^1.8.1",
    "serialize-error": "^11.0.0"
  },
  "devDependencies": {
    "execa": "^7.1.1"
  }
}

{
  "name": "@templ/cli",
  "cliname": "TEMPL",
  "type": "module",
  "version": "0.0.1",
  "description": "Cli",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "sideEffects": true,
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "templ-cli": "templ.mjs"
  },
  "files": [
    "*.d.ts",
    "dist",
    "templ.mjs"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0",
    "npm": ">=8"
  },
  "scripts": {
    "build": "tsx esbuild.config.ts",
    "clean": "del-cli .turbo dist",
    "dev": "tsx ./src/index",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@templ/config": "workspace:*",
    "@templ/tsconfig": "workspace:*",
    "@types/node": "^20.17.6",
    "@vitest/coverage-v8": "^2.1.4",
    "del-cli": "^6.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "size-limit": "400 KB"
}

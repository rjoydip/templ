{
  "name": "@templ/cli",
  "version": "0.0.0",
  "description": "TEMPL cli service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "templ": "templ.mjs"
  },
  "files": [
    "*.d.ts",
    "dist",
    "templ.mjs"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo dist docs coverage",
    "dev": "tsx ./src/index.ts -v",
    "docs:preview": "sirv docs",
    "docs:build": "typedoc src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:cli": "pnpm link . && pnpm templ -v",
    "test:watch": "vitest run --watch"
  },
  "sideEffects": true,
  "types": "./dist/index.d.ts",
  "dependencies": {
    "sade": "^1.8.1",
    "serialize-error": "^11.0.1"
  },
  "devDependencies": {
    "@templ/config": "workspace:^",
    "@templ/eslint-config": "workspace:^",
    "eslint": "^8.47.0",
    "find-monorepo-root": "^1.0.3",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "tsx": "^3.12.7",
    "typedoc": "^0.24.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2"
  },
  "cliname": "TEMPL"
}

{
  "name": "@templ/cli",
  "cliname": "TEMPL",
  "type": "module",
  "version": "0.0.0",
  "description": "TEMPL cli service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "sideEffects": true,
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "templ": "templ.mjs"
  },
  "files": [
    "*.d.ts",
    "dist",
    "templ.mjs"
  ],
  "engines": {
    "node": "^18.8.0 || >=20.6.0"
  },
  "scripts": {
    "build": "wireit",
    "clean": "trash .wireit dist coverage",
    "test": "wireit",
    "test:cli": "wireit",
    "test:watch": "wireit"
  },
  "dependencies": {
    "@templ/logger": "workspace:*",
    "sade": "^1.8.1",
    "serialize-error": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^0.34.6",
    "find-monorepo-root": "^1.0.3",
    "trash-cli": "^5.0.0",
    "tsup": "^8.0.1",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^0.34.6",
    "wireit": "^0.14.1"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        {
          "script": "../core:build",
          "cascade": false
        },
        {
          "script": "../config:build",
          "cascade": false
        }
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:cli": {
      "command": "pnpm link . && pnpm templ -v",
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  }
}

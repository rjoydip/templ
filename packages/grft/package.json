{
  "name": "grft",
  "type": "module",
  "version": "0.1.0",
  "description": "Generate readme from template",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/grft/tree/main/packages/grft#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/grft.git",
    "directory": "packages/grft"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/grft/issues"
  },
  "sideEffects": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "esno ./src/index.ts",
    "prepublishOnly": "nr build"
  },
  "dependencies": {
    "@grft/core": "workspace:*"
  }
}

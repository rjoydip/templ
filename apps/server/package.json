{
  "name": "@templ/server",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.14.3",
  "description": "TEMPL server",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "apps/server"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "files": [
    "*.d.ts",
    "dist"
  ],
  "engines": {
    "node": "^18.8.0 || >=20.6.0",
    "npm": ">=8"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch --clean --target esnext --format esm --platform node --onSuccess 'node dist/index.js'",
    "build": "tsup src/index.ts --dts --clean --minify --no-splitting --no-sourcemap --target esnext --format esm --platform node",
    "server:load": "tsx ./test/server.load.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.5.0",
    "@hono/zod-openapi": "^0.9.6",
    "@scalar/hono-api-reference": "^0.3.28",
    "consola": "^3.2.3",
    "hono": "^3.12.7"
  },
  "devDependencies": {
    "@types/autocannon": "^7.12.5",
    "@types/node": "^20.11.7",
    "autocannon": "^7.14.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "vitest": "^1.2.1"
  }
}

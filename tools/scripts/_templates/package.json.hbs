{
  "name": "@templ/{{ name }}",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL {{ name }} service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/{{ name }}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/{{ name }}"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "dev": "wireit",
    "docs:build": "wireit",
    "docs:preview": "wireit",
    "lint": "wireit",
    "size:limit": "wireit",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "devDependencies": {
    "@size-limit/file": "^8.2.6",
    "@templ/config": "workspace:^",
    "@templ/eslint-config": "workspace:^",
    "@templ/tsconfig": "workspace:^",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "rimraf": "^5.0.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "tsx": "^3.12.7",
    "tsup": "^7.2.0",
    "typedoc": "^0.24.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2",
    "wireit": "^0.13.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": []
    },
    "clean": {
      "command": "rimraf .eslintcache dist docs coverage"
    },
    "dev": {
      "command": "tsx ./src/index.ts --watch",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ]
    },
    "docs:build": {
      "command": "typedoc src/index.ts",
      "output": [
        "docs/**"
      ],
      "dependencies": [
        "build"
      ]
    },
    "docs:preview": {
      "command": "sirv docs",
      "files": [
        "src/**"
      ],
      "dependencies": [
        "docs:build"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": ["src/**/*.ts", ".eslintignore", ".eslintrc"]
    },
    "size:limit": {
      "command": "size-limit",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "size-limit": [{
    "path": "dist/index.js",
    "limit": "10KB"
  }]
}

{{#expect name}}

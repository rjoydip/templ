{
  "name": "templ",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.14.0",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": "rjoydip/templ",
  "sideEffects": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": "This project is configured to use pnpm"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "all": "pnpm -C scripts all",
    "build": "pnpm -r build",
    "clean": "pnpm -C scripts clean",
    "changelog": "auto-changelog -p",
    "create:stack": "pnpm -C scripts create:stack",
    "commit": "better-commits",
    "deps:update": "taze -r -w -i -f -l",
    "eslint:viewer": "eslint-flat-config-viewer",
    "lint": "pnpm -C scripts lint",
    "size:report": "pnpm -C scripts size:report",
    "test": "pnpm -r test",
    "test:cli": "pnpm -r test:cli"
  },
  "workspaces": [
    "apps/**",
    "docs",
    "packages/**",
    "scripts"
  ],
  "pre-commit": ["deps:update", "clean", "lint", "build", "test", "test:cli", "changelog"],
  "devDependencies": {
    "@antfu/eslint-config": "2.6.1",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@secretlint/secretlint-rule-preset-recommend": "^8.1.0",
    "@size-limit/file": "^11.0.1",
    "auto-changelog": "^2.4.0",
    "better-commits": "^1.7.2",
    "cspell": "^8.3.2",
    "envinfo": "^7.11.0",
    "eslint": "^8.56.0",
    "eslint-flat-config-viewer": "^0.1.4",
    "knip": "^3.12.0",
    "pnpm": "^8.14.0",
    "pre-commit": "^1.2.2",
    "secretlint": "^8.1.0",
    "size-limit": "^11.0.1",
    "taze": "^0.13.1"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "knip": {
    "workspaces": {
      "packages/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js",
          "tsup.config.ts"
        ],
        "ignore": [
          "**/dist/*.js"
        ]
      },
      "packages/cli": {
        "entry": [
          "**/*.ts",
          "!*.mjs"
        ],
        "ignore": [
          "*.mjs",
          "**/dist/*.js"
        ]
      },
      "scripts": {
        "entry": [
          "**/*.ts"
        ],
        "ignore": [
          "**/_templates"
        ]
      }
    },
    "ignoreBinaries": [
      "eslint",
      "only-allow"
    ],
    "ignoreDependencies": [
      "@secretlint/secretlint-rule-preset-recommend",
      "@size-limit/file",
      "nano-staged",
      "vitepress",
      "tsx"
    ],
    "ignore": [
      "**/.github/**",
      "**/.vitepress",
      "**/fixtures/**",
      "**/coverage",
      "taze.config.js"
    ]
  },
  "stackblitz": {
    "startCommand": "pnpm build"
  },
  "size-limit": [
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "300B",
      "brotli": true
    },
    {
      "path": "./packages/core/dist/index.js",
      "limit": "100B",
      "brotli": true
    },
    {
      "path": "./packages/config/dist/index.js",
      "limit": "600B",
      "brotli": true
    },
    {
      "path": "./packages/logger/dist/index.js",
      "limit": "800B",
      "brotli": true
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "700B",
      "brotli": true
    }
  ]
}

{
  "name": "templ",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git"
  },
  "sideEffects": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": ">=3"
  },
  "scripts": {
    "precommit": "pnpm deps:update && pnpm lint && pnpm build && pnpm changelog",
    "prebuild": "pnpm -C scripts clean",
    "preinstall": "npx only-allow pnpm",
    "all": "pnpm -C scripts all",
    "build": "pnpm -r build",
    "changelog": "auto-changelog -p",
    "commit": "better-commits",
    "create": "pnpm run -C scripts create --stack",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "pnpm -C scripts lint",
    "test": "pnpm -r test",
    "test:cli": "pnpm -r test:cli"
  },
  "workspaces": [
    "apps/**",
    "benchmark",
    "docs",
    "packages/**",
    "scripts"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "2.6.2",
    "@size-limit/file": "^11.0.2",
    "auto-changelog": "^2.4.0",
    "better-commits": "^1.8.0",
    "eslint": "^8.56.0",
    "pnpm": "^8.14.1",
    "size-limit": "^11.0.2",
    "taze": "^0.13.1"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "stackblitz": {
    "startCommand": "pnpm build"
  },
  "size-limit": [
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "300B",
      "brotli": true
    },
    {
      "path": "./packages/core/dist/index.js",
      "limit": "100B",
      "brotli": true
    },
    {
      "path": "./packages/config/dist/index.js",
      "limit": "600B",
      "brotli": true
    },
    {
      "path": "./packages/logger/dist/index.js",
      "limit": "800B",
      "brotli": true
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "700B",
      "brotli": true
    }
  ]
}

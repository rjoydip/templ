{
  "name": "grft",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.2",
  "description": "Generate readme file from template file",
  "license": "MIT",
  "sideEffects": true,
  "author": {
    "name": "Joydip Roy",
    "email": "joydipand@gmail.com",
    "url": "https://github.com/rjoydip"
  },
  "repository": "rjoydip/grft",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "prepublish": "nr all",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "build": "pnpm -r --filter='./packages/**' run build",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" pnpm -r --parallel --filter='./packages/**' run dev",
    "publish": "pnpm -r publish --access public",
    "release": "bumpp package.json packages/**/package.json --commit --push --tag",
    "test": "vitest packages",
    "test:ci": "CI=true nr test:run",
    "test:cli": "pnpm -r --stream run test:cli",
    "test:coverage": "nr test:run --coverage",
    "test:coverage:preview": "nr test:ui --coverage",
    "test:ui": "vitest -r packages --ui",
    "test:run": "vitest run -r packages",
    "typecheck": "tsc --noEmit",
    "markdown:lint": "markdown-link-check *.md .github/*.md packages/*/*.md ",
    "clean": "pnpm -r --parallel --filter='./packages/**' run clean && rimraf .eslintcache coverage",
    "clean:nm": "pnpm -r --parallel --filter='./packages/**' run clean:nm && rimraf packages/node_modules node_modules",
    "all": "nr clean && ni && nu && nr typecheck && nr format && nr lint:fix && nr markdown:lint && nr build && nr test:ci && nr test:coverage"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.4",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.32.2",
    "@vitest/ui": "^0.32.2",
    "bumpp": "^9.1.1",
    "eslint": "^8.43.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-regexp": "^1.15.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.2.2",
    "markdown-link-check": "^3.11.2",
    "pnpm": "^8.6.3",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  },
  "simple-git-hooks": {
    "commit-msg": "echo $(cat .git/COMMIT_EDITMSG) | npx commitlint",
    "pre-commit": "pnpm exec lint-staged --concurrent true"
  },
  "lint-staged": {
    "*": [
      "nr format"
    ],
    "*.[jt]s?(x)": [
      "nr lint:fix"
    ]
  },
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

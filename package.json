{
  "private": true,
  "name": "templ",
  "version": "0.0.0",
  "description": "A project template",
  "license": "MIT",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "repository": "rjoydip/templ",
  "type": "module",
  "scripts": {
    "all": "pnpm clean && pnpm deps:update && pnpm lint && pnpm changelog && pnpm build:all && pnpm size:generate && pnpm test:all && pnpm update:third_party",
    "build": "pnpm -r build",
    "build:all": "pnpm build && pnpm build:docs",
    "build:docs": "pnpm -r build:docs",
    "clean": "rimraf .pnpm-store coverage temp && pnpm -r clean",
    "clean:nm": "pnpm -C scripts clean:nm",
    "changelog": "auto-changelog -p",
    "create:pkg": "pnpm -C scripts create:pkg",
    "deps:update": "taze -r -w -i",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm -r eslint && pnpm lint:size && pnpm lint:spell && pnpm lint:secret && pnpm lint:md",
    "lint:md": "pnpm -C scripts lint:md",
    "lint:secret": "secretlint --secretlintignore .gitignore \"**/*\"",
    "lint:size": "pnpm -r lint:size",
    "lint:spell": "cspell .",
    "prepare": "husky install",
    "size:generate": "pnpm -C scripts size:generate",
    "test": "pnpm -r test",
    "test:all": "pnpm test && pnpm test:cli",
    "test:cli": "pnpm -r test:cli",
    "update:third_party": "git submodule update --recursive --remote"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "auto-changelog": "^2.4.0",
    "cspell": "^7.3.6",
    "envinfo": "^7.10.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "pnpm": "^8.7.6",
    "rimraf": "^5.0.1",
    "secretlint": "^7.0.7",
    "snyk": "^1.1226.0",
    "stylelint": "^15.10.3",
    "taze": "^0.11.2"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "shell": "bash",
    "yarn": "This project is configured to use pnpm"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "nano-staged": {
    "*": [
      "cspell .",
      "secretlint \"**/*\""
    ],
    "*.{js,ts,jsx,tsx,md,json}": "prettier --write --cache .",
    "*.css": [
      "stylelint",
      "eslint --fix"
    ],
    "*.md": [
      "pnpm -C scripts lint:md"
    ]
  },
  "packageManager": "pnpm@8.7.6",
  "stackblitz": {
    "startCommand": "pnpm build"
  }
}

{
  "name": "templ",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.13.1",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": "rjoydip/templ",
  "sideEffects": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "shell": "bash",
    "yarn": "This project is configured to use pnpm"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "all": "pnpm -C scripts all",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && trash .pnpm-store temp",
    "changelog": "auto-changelog -p",
    "create:pkg": "pnpm -C scripts create:pkg",
    "eslint:viewer": "eslint-flat-config-viewer",
    "size:report": "pnpm -C scripts size:report",
    "test": "pnpm -r test",
    "test:all": "pnpm test && pnpm test:cli",
    "test:cli": "pnpm -r test:cli",
    "update:third_party": "git submodule update --recursive --remote"
  },
  "workspaces": [
    "apps/**",
    "packages/**",
    "scripts",
    "third_party/**"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "2.6.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@secretlint/secretlint-rule-preset-recommend": "^8.1.0",
    "@size-limit/file": "^11.0.1",
    "auto-changelog": "^2.4.0",
    "cspell": "^8.2.4",
    "envinfo": "^7.11.0",
    "eslint": "^8.56.0",
    "eslint-flat-config-viewer": "^0.1.4",
    "husky": "^8.0.3",
    "knip": "^3.9.0",
    "nano-staged": "^0.8.0",
    "pnpm": "^8.13.1",
    "secretlint": "^8.1.0",
    "size-limit": "^11.0.1",
    "taze": "^0.13.1",
    "trash-cli": "^5.0.0"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "nano-staged": {
    "*": [
      "cspell .",
      "secretlint --secretlintignore .gitignore \"**/*\""
    ],
    "*.{css, js,ts,jsx,tsx,md,json}": "eslint --color --cache --fix --cache-location .eslintcache ."
  },
  "knip": {
    "workspaces": {
      "packages/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js",
          "tsup.config.ts"
        ],
        "ignore": [
          "**/dist/*.js"
        ]
      },
      "packages/cli": {
        "entry": [
          "**/*.ts",
          "!*.mjs"
        ],
        "ignore": [
          "*.mjs",
          "**/dist/*.js"
        ]
      },
      "scripts": {
        "entry": [
          "**/*.ts"
        ],
        "ignore": [
          "**/_templates"
        ]
      }
    },
    "ignoreBinaries": [
      "eslint",
      "only-allow"
    ],
    "ignoreDependencies": [
      "@secretlint/secretlint-rule-preset-recommend",
      "@size-limit/file",
      "nano-staged",
      "vitepress",
      "esno",
      "trash-cli"
    ],
    "ignore": [
      "**/.github/**",
      "**/.wireit",
      "**/.vitepress",
      "**/fixtures/**",
      "**/coverage",
      "taze.config.js"
    ]
  },
  "stackblitz": {
    "startCommand": "pnpm build"
  },
  "size-limit": [
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "300B",
      "brotli": true
    },
    {
      "path": "./packages/core/dist/index.js",
      "limit": "100B",
      "brotli": true
    },
    {
      "path": "./packages/config/dist/index.js",
      "limit": "600B",
      "brotli": true
    },
    {
      "path": "./packages/logger/dist/index.js",
      "limit": "800B",
      "brotli": true
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "700B",
      "brotli": true
    }
  ]
}

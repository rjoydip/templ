{
  "name": "gfft",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.6.9",
  "description": "Generate file from template file",
  "license": "MIT",
  "sideEffects": true,
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Joydip Roy",
    "email": "joydipand@gmail.com",
    "url": "https://github.com/rjoydip"
  },
  "repository": "rjoydip/gfft",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "shell": "bash"
  },
  "scripts": {
    "pretest": "nr build",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "changelog": "npx auto-changelog",
    "clean": "node scripts/commander.js clean",
    "clean:nm": "node scripts/commander.js clean --nm",
    "build": "pnpm -r --filter='./packages/**' run build",
    "build:storybook": "pnpm run -C './packages/ui' storybook:build",
    "deps:fresh": "taze -r -w -i",
    "dev": "pnpm -r --filter='./packages/**' run dev",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache --fix .",
    "lint:spell": "cspell .",
    "lint:size-limit": "size-limit",
    "lint:secret": "secretlint \"**/*\"",
    "lint:md": "node scripts/markdownlint.js $(glob '{*.md,{.github,packages,fixtures}/**/*.md}' -i '**/node_modules/**')",
    "release": "release-it --ci",
    "test": "vitest run -r packages",
    "test:ci": "nr build && CI=true nr test",
    "test:watch": "nr build && nr test --watch",
    "test:cli": "nr build && pnpm run -C './packages/cli' test:cli",
    "test:storybook": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm run -C ./packages/ui preview:storybook\" \"npx wait-on tcp:6006 && pnpm run -C ./packages/ui test:storybook\"",
    "all": "nr clean && nr deps:fresh && nr format && nr lint && nr lint:spell && nr lint:secret && nr lint:md && nr test:ci && nr test:cli && nr lint:size-limit && nr test:storybook"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@release-it/bumper": "^5.0.0",
    "@release-it/conventional-changelog": "^7.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.3",
    "@size-limit/file": "^8.2.6",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "auto-changelog": "^2.4.0",
    "concurrently": "^8.2.0",
    "cspell": "^6.31.2",
    "envinfo": "^7.10.0",
    "eslint": "^8.45.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-regexp": "^1.15.0",
    "esno": "^0.16.3",
    "execa": "^7.1.1",
    "glob": "^10.3.3",
    "markdownlint": "^0.29.0",
    "ora": "^6.3.1",
    "pnpm": "^8.6.9",
    "prettier": "^3.0.0",
    "release-it": "^16.1.2",
    "rimraf": "^5.0.1",
    "sade": "^1.8.1",
    "secretlint": "^7.0.3",
    "serialize-error": "^11.0.0",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^8.2.6",
    "taze": "^0.11.2",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "wait-on": "^7.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run all"
  },
  "size-limit": [
    {
      "path": "./packages/core/dist/index.js",
      "limit": "800B"
    },
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "500B"
    },
    {
      "path": "./packages/ui/dist/index.js",
      "limit": "500B"
    }
  ],
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

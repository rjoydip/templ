{
  "name": "templ",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": "rjoydip/templ",
  "sideEffects": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "shell": "bash",
    "yarn": "This project is configured to use pnpm"
  },
  "scripts": {
    "all": "node scripts/js/all.js",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && trash .pnpm-store coverage temp && empty-trash",
    "changelog": "auto-changelog -p",
    "create:pkg": "pnpm -C scripts create:pkg",
    "deps:update": "taze -r -w -i -f -l --ignore-paths='third_party/**'",
    "eslint:viewer": "eslint-flat-config-viewer",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm deps:update",
    "lint": "node scripts/js/lint.js",
    "_setup_": "node scripts/js/setup.js",
    "system:info": "envinfo --system --binaries --browsers",
    "test": "pnpm -r test",
    "test:all": "pnpm test && pnpm test:cli",
    "test:cli": "pnpm -r test:cli",
    "update:third_party": "git submodule update --recursive --remote"
  },
  "workspaces": [
    "apps/**",
    "packages/**",
    "scripts",
    "third_party/**"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.24",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "@size-limit/file": "^9.0.0",
    "auto-changelog": "^2.4.0",
    "cspell": "^7.3.8",
    "empty-trash-cli": "^2.0.0",
    "envinfo": "^7.10.0",
    "eslint": "^8.52.0",
    "eslint-flat-config-viewer": "^0.1.0",
    "husky": "^8.0.3",
    "knip": "^2.38.4",
    "nano-staged": "^0.8.0",
    "pnpm": "^8.10.0",
    "secretlint": "^7.0.7",
    "size-limit": "^9.0.0",
    "taze": "^0.12.1",
    "trash-cli": "^5.0.0"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "nano-staged": {
    "*": [
      "cspell .",
      "secretlint --secretlintignore .gitignore \"**/*\""
    ],
    "*.{css, js,ts,jsx,tsx,md,json}": "eslint --color --cache --fix --cache-location .eslintcache .",
    "*.md": [
      "pnpm -C scripts lint:md"
    ]
  },
  "knip": {
    "workspaces": {
      "packages/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js",
          "tsup.config.ts"
        ],
        "ignore": [
          "**/dist/*.js"
        ]
      },
      "packages/api/services/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js"
        ],
        "ignore": [
          "**/dist/**/*.js"
        ]
      },
      "packages/cli": {
        "entry": [
          "**/*.ts",
          "!*.mjs"
        ],
        "ignore": [
          "*.mjs",
          "**/dist/*.js"
        ]
      },
      "scripts": {
        "entry": [
          "**/*.ts"
        ],
        "ignore": [
          "**/_templates"
        ]
      }
    },
    "ignoreBinaries": [
      "eslint",
      "only-allow"
    ],
    "ignoreDependencies": [
      "@secretlint/secretlint-rule-preset-recommend",
      "@size-limit/file",
      "nano-staged",
      "tsx",
      "vitepress"
    ],
    "ignore": [
      "**/.wireit",
      "**/.vitepress",
      "**/fixtures/**",
      "**/coverage",
      "taze.config.js"
    ]
  },
  "stackblitz": {
    "startCommand": "pnpm build"
  },
  "size-limit": [
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "300B",
      "brotli": true
    },
    {
      "path": "./packages/core/dist/index.js",
      "limit": "100B",
      "brotli": true
    },
    {
      "path": "./packages/config/dist/index.js",
      "limit": "600B",
      "brotli": true
    },
    {
      "path": "./packages/logger/dist/index.js",
      "limit": "800B",
      "brotli": true
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "700B",
      "brotli": true
    }
  ]
}

{
  "name": "gfft",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.6.10",
  "description": "Generate file from template file",
  "license": "MIT",
  "sideEffects": true,
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Joydip Roy",
    "email": "joydipand@gmail.com",
    "url": "https://github.com/rjoydip"
  },
  "repository": "rjoydip/gfft",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "shell": "bash"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "deps:fresh": "taze -r -w -i",
    "eslint": "eslint --cache --fix .",
    "lint:spell": "cspell .",
    "lint:secret": "secretlint \"**/*\"",
    "lint:md": "node scripts/markdownlint.js",
    "format": "prettier --write --cache .",
    "size-limit": "size-limit",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test:cli": "turbo run --filter=cli test:cli",
    "test:storybook": "turbo run --filter=ui test:storybook",
    "test:ci": "CI=true vitest run -r packages",
    "test:watch": "vitest run -r packages --watch",
    "clean": "node scripts/commander.js clean",
    "clean:nm": "node scripts/commander.js clean --nm",
    "lint": "nr eslint && nr lint:spell && nr lint:secret && nr lint:md",
    "test": "nr test:ci && nr test:cli && nr test:storybook",
    "all": "nr clean && nr deps:fresh && nr format && nr lint && nr build && nr test && nr size-limit"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.3",
    "@size-limit/file": "^8.2.6",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "cspell": "^6.31.2",
    "del": "^7.0.0",
    "envinfo": "^7.10.0",
    "eslint": "^8.45.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-regexp": "^1.15.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "markdownlint": "^0.29.0",
    "ora": "^6.3.1",
    "pnpm": "^8.6.10",
    "prettier": "^3.0.0",
    "sade": "^1.8.1",
    "secretlint": "^7.0.3",
    "serialize-error": "^11.0.0",
    "simple-git-hooks": "^2.9.0",
    "size-limit": "^8.2.6",
    "snyk": "^1.1194.0",
    "taze": "^0.11.2",
    "tempura": "^0.4.0",
    "tsup": "^7.1.0",
    "turbo": "^1.10.9",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "zod": "^3.21.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run all"
  },
  "size-limit": [
    {
      "path": "./packages/core/dist/index.js",
      "limit": "800B"
    },
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "500B"
    },
    {
      "path": "./packages/ui/dist/index.js",
      "limit": "500B"
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "600B"
    }
  ],
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

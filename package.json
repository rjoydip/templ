{
  "private": true,
  "name": "templ",
  "version": "0.0.0",
  "description": "A project template",
  "license": "MIT",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "repository": "rjoydip/templ",
  "type": "module",
  "scripts": {
    "all": "nr clean && nr deps:fresh && nr build && nr docs:build && nr format && nr changelog && nr size:limit && nr lint && nr test && nr test:cli && nr third_party:git:update",
    "build": "turbo run build --filter='./packages/*'",
    "coverage:lcov": "pnpm run -C scripts coverage:lcov",
    "clean": "rimraf .turbo .pnpm-store coverage && nr -r clean",
    "clean:nm": "nr -C scripts clean:nm",
    "changelog": "auto-changelog -p",
    "create:pkg": "nr -C scripts create:pkg",
    "deps:fresh": "taze -r -w -i",
    "dev": "turbo run dev --filter='./packages/*'",
    "docs:build": "turbo run docs:build",
    "format": "prettier --write --cache .",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo run eslint && nr lint:spell && nr lint:secret && nr lint:md",
    "lint:md": "nr -C scripts lint:md",
    "lint:secret": "secretlint \"**/*\"",
    "lint:spell": "cspell .",
    "prepare": "husky install",
    "size:limit": "turbo run size:limit",
    "test": "turbo run test --filter='./packages/*'",
    "test:ci": "turbo run test:ci --filter='./packages/*'",
    "test:cli": "turbo run --filter=cli test:cli",
    "third_party:git:update": "nr -C scripts third_party:git:update"
  },
  "sideEffects": true,
  "workspaces": [
    "docs",
    "scripts",
    "apps/*",
    "packages/*",
    "third_party/*",
    "tools/*"
  ],
  "devDependencies": {
    "@antfu/ni": "^0.21.6",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@preact/preset-vite": "^2.5.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "@templ/config": "workspace:^",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "auto-changelog": "^2.4.0",
    "cspell": "^7.2.0",
    "envinfo": "^7.10.0",
    "happy-dom": "^10.11.2",
    "husky": "^8.0.3",
    "pnpm": "^8.7.0",
    "prettier": "^3.0.3",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "secretlint": "^7.0.7",
    "serialize-error": "^11.0.2",
    "snyk": "^1.1207.0",
    "taze": "^0.11.2",
    "tsup": "^7.2.0",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "shell": "bash"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "packageManager": "pnpm@8.7.0",
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

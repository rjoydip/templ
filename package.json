{
  "name": "@templ/workspace",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/**",
    "config/**",
    "packages/**",
    "plugins/**",
    "scripts",
    "generator"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": ">=3"
  },
  "scripts": {
    "postinstall": "nr deps:update",
    "all": "nr deps:update && nr build && nr lint",
    "build": "nr clean && turbo run build && nr build:check",
    "clean": "nr -C scripts clean",
    "build:check": "nr -C scripts build:check",
    "commit": "nr all && better-commits",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "eslint . && nr knip && nr lint:type-cov",
    "knip": "knip -c ./config/knip.config.ts",
    "release": "changeset version && npm publish && git push --follow-tags",
    "lint:type-cov": "nr -C scripts lint:type-cov",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.4",
    "@antfu/ni": "^0.21.12",
    "@changesets/cli": "^2.27.1",
    "better-commits": "^1.11.0",
    "eslint": "^8.56.0",
    "knip": "^4.3.1",
    "pnpm": "^8.15.1",
    "taze": "^0.13.2",
    "turbo": "^1.12.2"
  }
}

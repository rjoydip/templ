{
  "private": true,
  "name": "templ",
  "version": "0.0.0",
  "description": "A project template",
  "license": "MIT",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "repository": "rjoydip/templ",
  "type": "module",
  "scripts": {
    "all": "pnpm clean && pnpm deps:update && pnpm lint && pnpm changelog && pnpm build && pnpm size:generate && pnpm test:all && pnpm system:info && pnpm update:third_party",
    "build": "pnpm -r build",
    "clean": "rimraf .pnpm-store coverage temp && pnpm -r clean",
    "clean:nm": "pnpm -C scripts clean:nm",
    "changelog": "auto-changelog -p",
    "create:pkg": "pnpm -C scripts create:pkg",
    "deps:update": "taze -r -w -i",
    "ci:copy:env": "pnpm -C scripts ci:copy:env",
    "ci:delete:env": "pnpm -C scripts ci:delete:env",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm lint:eslint && pnpm lint:knip && pnpm lint:md && pnpm pnpm lint:secret && pnpm lint:size && pnpm lint:spell",
    "lint:eslint": "pnpm -r eslint",
    "lint:knip": "knip --no-gitignore --no-exit-code",
    "lint:md": "pnpm -C scripts lint:md",
    "lint:secret": "secretlint --secretlintignore .gitignore \"**/*\"",
    "lint:size": "pnpm -r lint:size",
    "lint:spell": "cspell .",
    "prepare": "husky install",
    "size:generate": "pnpm -C scripts size:generate",
    "system:info": "envinfo --system --binaries --browsers",
    "test": "pnpm -r test",
    "test:all": "pnpm test && pnpm test:cli",
    "test:cli": "pnpm -r test:cli",
    "update:third_party": "git submodule update --recursive --remote"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/**",
    "packages/**",
    "scripts"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "auto-changelog": "^2.4.0",
    "cspell": "^7.3.7",
    "envinfo": "^7.10.0",
    "husky": "^8.0.3",
    "knip": "^2.30.1",
    "nano-staged": "^0.8.0",
    "pnpm": "^8.8.0",
    "rimraf": "^5.0.5",
    "secretlint": "^7.0.7",
    "taze": "^0.11.3"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "shell": "bash",
    "yarn": "This project is configured to use pnpm"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "nano-staged": {
    "*": [
      "pnpm lint:spell",
      "pnpm lint:secret"
    ],
    "*.{css, js,ts,jsx,tsx,md,json}": "pnpm lint:eslint",
    "*.md": [
      "pnpm lint:md"
    ]
  },
  "knip": {
    "workspaces": {
      "packages/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js",
          "tsup.config.ts"
        ],
        "ignore": [
          "**/dist/*.js"
        ]
      },
      "packages/api/services/*": {
        "entry": [
          "**/*.ts",
          "**/*.config.js"
        ],
        "ignore": [
          "**/dist/**/*.js"
        ]
      },
      "packages/cli": {
        "entry": [
          "**/*.ts",
          "!*.mjs"
        ],
        "ignore": [
          "*.mjs",
          "**/dist/*.js"
        ]
      },
      "scripts": {
        "entry": [
          "**/*.ts"
        ],
        "ignore": [
          "**/_templates"
        ]
      }
    },
    "ignoreBinaries": [
      "eslint",
      "only-allow"
    ],
    "ignoreDependencies": [
      "vitepress",
      "@secretlint/secretlint-rule-preset-recommend",
      "nano-staged",
      "size-limit",
      "tsx",
      "@size-limit/file"
    ],
    "ignore": [
      "**/.wireit",
      "**/.vitepress",
      "**/fixtures/**",
      "**/coverage",
      "taze.config.js"
    ]
  },
  "packageManager": "pnpm@8.8.0",
  "stackblitz": {
    "startCommand": "pnpm build"
  }
}

{
  "name": "@templ/workspace",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.3",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/**",
    ".config/**",
    "packages/**",
    "plugins/**",
    "scripts",
    "generator"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": ">=3"
  },
  "scripts": {
    "postinstall": "nr deps:update",
    "all": "ni && nr deps:update && nr build && nr lint && nr test",
    "build": "nr -C scripts clean && turbo run build && nr -C scripts build:check",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "eslint . --fix && knip -c .config/knip.config.ts && nr -C scripts automd && nr -r typecheck",
    "release": "changeset version && npm publish && git push --follow-tags",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.4",
    "@antfu/ni": "^0.21.12",
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.56.0",
    "knip": "^5.0.1",
    "pnpm": "^8.15.3",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.3",
    "turbo": "^1.12.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i && pnpm run deps:update && pnpm run build && pnpm run lint && pnpm run test",
    "preserveUnused": true
  }
}

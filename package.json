{
  "private": true,
  "name": "templ",
  "version": "0.0.0",
  "description": "A project template",
  "license": "MIT",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "repository": "rjoydip/templ",
  "type": "module",
  "scripts": {
    "all": "nr clean && nr deps:fresh && nr build && nr format && nr lint && nr test && nr size-limit",
    "build": "turbo run build",
    "clean": "rimraf .turbo .eslintcache .pnpm-store coverage && nr -r clean",
    "clean:nm": "nr -C scripts clean:nm",
    "deps:fresh": "taze -r -w -i",
    "dev": "turbo run dev",
    "eslint": "eslint --cache --fix .",
    "format": "prettier --write --cache .",
    "preinstall": "npx only-allow pnpm",
    "lint": "nr eslint && nr lint:spell && nr lint:secret && nr lint:md",
    "lint:md": "nr -C scripts lint:md",
    "lint:secret": "secretlint \"**/*\"",
    "lint:spell": "cspell .",
    "lint:staged": "lint-staged --diff main --quiet --no-stash",
    "prepare": "husky install",
    "size-limit": "size-limit",
    "test": "nr test:ci && nr test:cli && nr test:storybook",
    "test:ci": "CI=true vitest run -r packages",
    "test:cli": "turbo run --filter=cli test:cli",
    "test:storybook": "turbo run --filter=ui test:storybook",
    "test:watch": "vitest run -r packages --watch",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/*",
    "docs/*",
    "packages/*",
    "scripts"
  ],
  "devDependencies": {
    "@antfu/ni": "^0.21.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.3",
    "@size-limit/file": "^8.2.6",
    "@templ/config": "workspace:^",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "auto-changelog": "^2.4.0",
    "cspell": "^6.31.2",
    "envinfo": "^7.10.0",
    "eslint": "^8.45.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-regexp": "^1.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "pnpm": "^8.6.10",
    "prettier": "^3.0.0",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "secretlint": "^7.0.3",
    "serialize-error": "^11.0.0",
    "size-limit": "^8.2.6",
    "snyk": "^1.1196.0",
    "taze": "^0.11.2",
    "tsup": "^7.1.0",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "shell": "bash"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "packageManager": "pnpm@8.6.10",
  "size-limit": [
    {
      "path": "./packages/core/dist/index.js",
      "limit": "3.0KB"
    },
    {
      "path": "./packages/cli/dist/index.js",
      "limit": "6.0KB"
    },
    {
      "path": "./packages/ui/dist/index.js",
      "limit": "500B"
    },
    {
      "path": "./packages/utils/dist/index.js",
      "limit": "600B"
    }
  ],
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

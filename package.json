{
  "name": "grft",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.6",
  "description": "Generate readme file from template file",
  "license": "MIT",
  "sideEffects": true,
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Joydip Roy",
    "email": "joydipand@gmail.com",
    "url": "https://github.com/rjoydip"
  },
  "repository": "rjoydip/grft",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:cli": "turbo run test:cli",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "deps:fresh": "taze -r -w -i",
    "markdown:lint": "markdown-link-check *.md .github/*.md packages/*/*.md",
    "clean": "turbo run clean && rimraf .eslintcache coverage && scripts/delete-root-nm.sh",
    "all": "turbo run all && nr format && nr lint:fix && nr markdown:lint && nr deps:fresh"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.4",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitest/coverage-v8": "^0.32.4",
    "@vitest/ui": "^0.32.4",
    "eslint": "^8.44.0",
    "eslint-config-turbo": "^1.10.7",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-regexp": "^1.15.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.2.3",
    "markdown-link-check": "^3.11.2",
    "pnpm": "^8.6.6",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.11.2",
    "tsup": "^7.1.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.4"
  },
  "simple-git-hooks": {
    "commit-msg": "echo $(cat .git/COMMIT_EDITMSG) | npx commitlint",
    "pre-commit": "pnpm exec lint-staged --concurrent true"
  },
  "lint-staged": {
    "*": [
      "nr format"
    ],
    "*.[jt]s?(x)": [
      "nr lint:fix"
    ]
  },
  "stackblitz": {
    "startCommand": "nr dev"
  }
}

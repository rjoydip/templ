{
  "name": "templ",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git"
  },
  "sideEffects": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": ">=3"
  },
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "turbo run build",
    "postbuild": "pnpm run -C scripts dist-check",
    "bench": "turbo run bench",
    "changelog": "auto-changelog -p",
    "clean": "turbo run clean",
    "commit": "pnpm run deps:update && turbo run commit && pnpm run changelog && better-commits",
    "eslint": "eslint -c eslint.config.js --color --cache --fix --cache-location .eslintcache .",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "turbo run lint && pnpm run knip",
    "knip": "knip --include files,dependencies --reporter markdown",
    "setup": "turbo run setup",
    "test": "turbo run test"
  },
  "workspaces": [
    "apps/**",
    "benchmark",
    "docs",
    "packages/**",
    "scripts"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "2.6.3",
    "auto-changelog": "^2.4.0",
    "better-commits": "^1.8.1",
    "eslint": "^8.56.0",
    "knip": "^3.13.2",
    "pnpm": "^8.14.1",
    "taze": "^0.13.1",
    "turbo": "^1.11.3"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "stackblitz": {
    "startCommand": "pnpm run build"
  }
}

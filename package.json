{
  "name": "@templ/workspace",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "description": "A modern monorepo project template",
  "author": "Joydip Roy <joydipand@gmail.com> (https://github.com/rjoydip)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git"
  },
  "sideEffects": true,
  "workspaces": [
    "apps/**",
    "packages/**",
    "scripts",
    "generator"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "pnpm": ">=8",
    "shell": "bash",
    "yarn": ">=3"
  },
  "scripts": {
    "prepare": "husky",
    "postinstall": "pnpm exec playwright install --with-deps",
    "deps:update": "taze -r -w -i -f -l",
    "build": "pnpm clean && turbo run build",
    "clean": "pnpm -r run clean",
    "dev": "turbo run dev --parallel",
    "clean:all": "pnpm clean && node ./scripts/src/cleanNM.mjs",
    "check": "turbo lint typecheck && pnpm --filter=scripts build:check automd",
    "lint:fix": "turbo run lint:fix",
    "lint": "eslint . --fix",
    "validate": "pnpm deps:update && pnpm lint && pnpm build && pnpm test",
    "release": "changeset version && npm publish && git push --follow-tags",
    "test": "turbo run test --force",
    "test:ci": "vitest run --coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.24.1",
    "@changesets/cli": "^2.27.7",
    "@vitest/coverage-v8": "^1.6.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.4",
    "knip": "^5.27.0",
    "playwright": "^1.45.3",
    "taze": "^0.13.9",
    "turbo": "^2.0.11",
    "vitest": "^1.6.0"
  }
}

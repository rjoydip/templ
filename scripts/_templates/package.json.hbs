{
  "name": "@templ/{{ name }}",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL {{ name }} service",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/packages/{{ name }}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "packages/{{ name }}"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "engines": {
    "node": "^18.8.0 || >=20.6.0"
  },
  "scripts": {
    "build": "wireit",
    "clean": "trash dist docs coverage",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "devDependencies": {
    "@templ/config": "workspace:*",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^1.1.0",
    "trash-cli": "^5.0.0",
    "tsup": "^7.2.0",
    "vitest": "^1.1.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsup.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": []
    },
    "test": {
      "command": "vitest run",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test:watch": {
      "command": "vitest run --watch",
      "files": [
        "test/**.test.ts",
        "vitest.config.ts"
      ],
      "dependencies": [
        "build"
      ]
    }
  }
}


{
  "name": "@templ/scripts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL root scripts",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/scripts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "scripts"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "scripts": {
    "clean": "wireit",
    "clean:nm": "wireit",
    "create:pkg": "wireit",
    "eslint:fix": "eslint . --fix",
    "eslint": "wireit",
    "lint:md": "wireit",
    "size:data": "wireit",
    "size:generate": "wireit",
    "size:report": "wireit"
  },
  "dependencies": {
    "@templ/logger": "workspace:^",
    "@templ/utils": "workspace:^",
    "fast-glob": "^3.3.1",
    "markdown-table": "^3.0.3",
    "rollup": "^3.29.3",
    "terser": "^5.20.0",
    "totalist": "^3.0.1",
    "type-fest": "^4.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.2",
    "@templ/docs": "workspace:^",
    "@types/node": "^20.6.5",
    "eslint": "^8.50.0",
    "markdownlint": "^0.31.1",
    "ora": "^7.0.1",
    "rimraf": "^5.0.1",
    "tempura": "^0.4.0",
    "tsx": "^3.13.0",
    "wireit": "^0.14.0",
    "zod": "^3.22.2"
  },
  "wireit": {
    "clean": {
      "command": "rimraf .wireit"
    },
    "clean:nm": {
      "command": "node --loader tsx ./src/clean-nm.ts",
      "files": [
        "src/clean-nm.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "create:pkg": {
      "command": "node --loader tsx ./src/create-pkg.ts",
      "files": [
        "src/create-pkg.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "eslint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ]
    },
    "lint:md": {
      "command": "node --loader tsx ./src/lint-md.ts",
      "files": [
        "src/lint-md.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        }
      ]
    },
    "size:data": {
      "command": "node --loader tsx ./src/size/data.ts",
      "files": [
        "src/size/data.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "size:generate": {
      "command": "node --loader tsx ./src/size/generate.ts",
      "files": [
        "src/size/generate.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "size:report": {
      "command": "node --loader tsx ./src/size/report.ts",
      "files": [
        "src/size/report.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    }
  }
}

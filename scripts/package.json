{
  "name": "@templ/scripts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL root scripts",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/scripts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "scripts"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "engines": {
    "node": "^18.8.0 || >=20.6.0"
  },
  "scripts": {
    "all": "wireit",
    "ci:copy:env": "wireit",
    "ci:delete:env": "wireit",
    "create:pkg": "wireit",
    "ci:check:dist": "wireit",
    "lint": "wireit",
    "_setup_": "wireit",
    "size:data": "wireit",
    "size:generate": "wireit",
    "size:report": "wireit"
  },
  "dependencies": {
    "@templ/logger": "workspace:*",
    "@templ/utils": "workspace:*",
    "fast-glob": "^3.3.2",
    "markdown-table": "^3.0.3",
    "markdownlint": "^0.31.1",
    "rollup": "^4.9.1",
    "tempura": "^0.4.0",
    "terser": "^5.26.0",
    "totalist": "^3.0.1",
    "tsx": "^3.14.0",
    "type-fest": "^4.8.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "esno": "^4.0.0",
    "execa": "^8.0.1",
    "trash-cli": "^5.0.0",
    "wireit": "^0.14.1"
  },
  "wireit": {
    "all": {
      "command": "esno ./src/all.ts",
      "files": [
        "src/all.ts"
      ]
    },
    "ci:copy:env": {
      "command": "esno ./src/ci/copy-env.ts",
      "files": [
        "src/ci/copy-env.ts"
      ]
    },
    "ci:delete:env": {
      "command": "esno ./src/ci/delete-env.ts",
      "files": [
        "src/ci/delete-env.ts"
      ]
    },
    "create:pkg": {
      "command": "esno ./src/create-pkg.ts",
      "files": [
        "src/create-pkg.ts"
      ]
    },
    "ci:check:dist": {
      "command": "esno ./src/ci/check-dist.ts",
      "files": [
        "src/ci/check-dist.ts"
      ]
    },
    "lint": {
      "command": "esno ./src/lint.ts",
      "files": [
        "src/lint.ts"
      ]
    },
    "_setup_": {
      "command": "esno ./src/setup.ts",
      "files": [
        "src/setup.ts"
      ]
    },
    "size:data": {
      "command": "esno ./src/size/data.ts",
      "files": [
        "src/size/data.ts"
      ]
    },
    "size:generate": {
      "command": "esno ./src/size/generate.ts",
      "files": [
        "src/size/generate.ts"
      ]
    },
    "size:report": {
      "command": "esno ./src/size/report.ts",
      "files": [
        "src/size/report.ts"
      ]
    }
  }
}

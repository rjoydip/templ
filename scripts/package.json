{
  "name": "@templ/scripts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "TEMPL root scripts",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/templ/tree/main/scripts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/templ.git",
    "directory": "scripts"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/templ/issues"
  },
  "engines": {
    "node": "^18.8.0 || >=20.6.0"
  },
  "scripts": {
    "clean": "trash .wireit",
    "ci:copy:env": "wireit",
    "ci:delete:env": "wireit",
    "create:pkg": "wireit",
    "ci:check:dist": "wireit",
    "lint:md": "wireit",
    "size:data": "wireit",
    "size:generate": "wireit",
    "size:report": "wireit"
  },
  "dependencies": {
    "@templ/logger": "workspace:*",
    "@templ/utils": "workspace:*",
    "fast-glob": "^3.3.1",
    "markdown-table": "^3.0.3",
    "markdownlint": "^0.31.1",
    "rollup": "^4.1.4",
    "tempura": "^0.4.0",
    "terser": "^5.22.0",
    "totalist": "^3.0.1",
    "tsx": "^3.13.0",
    "type-fest": "^4.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "trash-cli": "^5.0.0",
    "wireit": "^0.14.0"
  },
  "wireit": {
    "ci:copy:env": {
      "command": "node --loader tsx ./src/ci/copy-env.ts",
      "files": [
        "src/ci/copy-env.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "ci:delete:env": {
      "command": "node --loader tsx ./src/ci/delete-env.ts",
      "files": [
        "src/ci/delete-env.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "create:pkg": {
      "command": "node --loader tsx ./src/create-pkg.ts",
      "files": [
        "src/create-pkg.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "ci:check:dist": {
      "command": "node --loader tsx ./src/ci/check-dist.ts",
      "files": [
        "src/ci/check-dist.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "lint:md": {
      "command": "node --loader tsx ./src/lint-md.ts",
      "files": [
        "src/lint-md.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        }
      ]
    },
    "size:data": {
      "command": "node --loader tsx ./src/size/data.ts",
      "files": [
        "src/size/data.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "size:generate": {
      "command": "node --loader tsx ./src/size/generate.ts",
      "files": [
        "src/size/generate.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    },
    "size:report": {
      "command": "node --loader tsx ./src/size/report.ts",
      "files": [
        "src/size/report.ts"
      ],
      "dependencies": [
        {
          "script": "../packages/logger:build",
          "cascade": false
        },
        {
          "script": "../packages/utils:build",
          "cascade": false
        }
      ]
    }
  }
}

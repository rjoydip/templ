{
  "git": {
    "requireBranch": "origin/main",
    "requireCleanWorkingDir": false,
    "requireCommits": true,
    "requireCommitsFail": false,
    "commitMessage": "feat(${scope}): released version v${version} [no ci]"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "versionArgs": ["--allow-same-version", "--workspaces-update=false"]
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json"
    },
    "@release-it/conventional-changelog": {
      "path": ".",
      "infile": "CHANGELOG.md",
      "preset": "conventionalcommits",
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "hooks": {
    "before:init": [
      "pnpm run clean",
      "pnpm run deps:fresh",
      "pnpm run format",
      "pnpm run lint",
      "pnpm run lint:md",
      "pnpm run test:ci",
      "pnpm run test:cli"
    ]
  }
}
